<% provide(:title, 'All Users') %>
<h1>All Users</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.email, user_path(user.id) %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to 'delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>